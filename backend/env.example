# SentimentDNA API Configuration
# ================================
# Copy this file to .env and fill in your values

# Application
APP_NAME=SentimentDNA API
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Security
SECRET_KEY=your-super-secret-key-change-in-production
API_KEY_HEADER=X-API-Key
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS (JSON array)
CORS_ORIGINS=["http://localhost:3000","http://localhost:3001"]

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/sentimentdna

# Redis (for caching and rate limiting)
REDIS_URL=redis://localhost:6379/0

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_BURST=10

# WebSocket
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=1000

# Tier Limits
TIER_FREE_ASSETS=1
TIER_FREE_HISTORY_DAYS=1
TIER_FREE_REFRESH_MS=30000

TIER_ANALYST_ASSETS=10
TIER_ANALYST_HISTORY_DAYS=30
TIER_ANALYST_REFRESH_MS=500
TIER_ANALYST_API_CALLS=10000

TIER_INSTITUTION_ASSETS=-1
TIER_INSTITUTION_HISTORY_DAYS=365
TIER_INSTITUTION_REFRESH_MS=100
TIER_INSTITUTION_API_CALLS=-1

# External APIs (optional - for real data)
TWITTER_API_KEY=
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
GLASSNODE_API_KEY=
COINGECKO_API_KEY=

# Monitoring
PROMETHEUS_PORT=9090
ENABLE_METRICS=true
